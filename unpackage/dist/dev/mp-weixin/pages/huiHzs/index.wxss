.hui-zis-top {
  height: 250rpx;
}
.hui-zis-top image {
  width: 100%;
  height: 100%;
}
.hui-zis-tab {
  width: 90%;
  margin: 0 auto;
  position: relative;
  top: -40rpx;
  background-color: #ffffff;
  box-shadow: 0 0 15px #d2cfcf;
  border-radius: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.hui-zis-items {
  width: 90%;
  margin: 0 auto;
}
.hui-zis-items-title {
  position: relative;
}
.hui-zis-items-title .jingxuan {
  color: #7b00d8;
  margin-left: 30rpx;
}
.hui-zis-items-title .all {
  float: right;
  margin-right: 20rpx;
}
.hui-zis-items-title .all text {
  position: relative;
  top: -4rpx;
}
.hui-zis-items-title .all image {
  width: 30rpx;
  height: 30rpx;
}
.hui-zis-items-title > image {
  position: absolute;
  top: -80%;
  left: 0;
  width: 250rpx;
  height: 120rpx;
  opacity: 0.2;
  filter: alpha(opacity=20);
  /* 针对 IE8 以及更早的版本 */
}
.hui-zis-items-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border: 1px solid #bbb19e;
  padding: 20rpx;
}
.hui-zis-items-item .name {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border-right: 1px solid #bbb19e;
  font-size: 28rpx;
  line-height: 90rpx;
}
.hui-zis-items-item .go {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 20rpx;
}

