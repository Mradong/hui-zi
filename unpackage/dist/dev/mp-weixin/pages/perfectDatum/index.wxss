page,
page,
uni-page-body {
  width: 100%;
  height: 100%;
}
 .uni-countdown__number {
  width: 100% !important;
  height: 64rpx !important;
  font-size: 32rpx !important;
}
.per-datum {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}
.per-datum-nav {
  height: 90rpx;
}
.per-datum-logo {
  width: 100%;
  height: 400rpx;
}
.per-datum-logo-msg {
  position: absolute;
  z-index: 99;
  top: 10%;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
}
.per-datum-logo-msg image {
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
}
.per-datum-logo-msg text {
  display: block;
  text-align: center;
  color: #333;
}
.per-datum-msg {
  width: 80%;
  margin: 0 auto;
  position: relative;
  z-index: 99;
}
.per-datum-msg .text-style {
  height: 84rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  color: #666666;
  font-size: 14px;
  border: 1px solid #dddddd;
  background: #f4f4f4;
  box-sizing: border-box;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  margin: 30rpx auto;
}
.per-datum-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}
.per-datum-bg image {
  width: 100%;
  height: 100%;
}
.per-datum .verify {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
}
.per-datum .verify .ipt-default-current {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
}
.per-datum .verify .sms-cd-btn {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  height: 84rpx;
  line-height: 84rpx;
  padding: 0 24rpx;
  margin: 30rpx 10rpx;
  color: #444444;
  background: #ffe300;
  border-radius: 4px;
  text-align: center;
  font-size: 14px;
}
.per-datum .affirm-btn {
  margin-top: 40rpx;
}

