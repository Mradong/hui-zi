page,
page,
uni-page-body {
  width: 100%;
  height: 100%;
}
.login {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.login .login-bg {
  width: 100%;
  height: 100%;
}
.login .login-bg image {
  width: 100%;
  height: 100%;
}
.login .login-txt {
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 30%;
  left: 50%;
  color: #3e3938b3;
  text-align: center;
  z-index: 99;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.login .login-but {
  position: absolute;
  width: 80%;
  bottom: 120rpx;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
}
.login .login-but .wx_login {
  background-color: #FFF;
  color: #333;
}
.login .login-but .button-hover {
  color: #000 !important;
}

