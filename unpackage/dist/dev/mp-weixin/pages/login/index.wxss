page,
page,
uni-page-body {
  width: 100%;
  height: 100%;
}
.login {
  width: 100%;
  height: 100%;
}
.login .login-bg {
  width: 100%;
  height: 100%;
}
.login .login-bg image {
  width: 100%;
  height: 90%;
}
.login .login-txt {
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 30%;
  left: 50%;
  color: #f5fcff;
  text-align: center;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.login .login-but {
  position: absolute;
  width: 80%;
  bottom: 120rpx;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
}
.login .login-but .wx_login {
  background-color: #07c6fa;
  color: #f5fcff;
}
.login .login-but .button-hover {
  background-color: #07c6fa !important;
  opacity: 0.7 !important;
  color: #ffffff !important;
}

