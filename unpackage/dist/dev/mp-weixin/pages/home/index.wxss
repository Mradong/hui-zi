.dream-banner {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.dream-banner-title {
  position: absolute;
  top: 50rpx;
  z-index: 999;
  color: #FFFFFF;
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  line-height: 64rpx;
  text-shadow: 4rpx 4rpx 10rpx #000000;
}
.dream-banner-title > text {
  font-size: 36rpx;
  position: relative;
  z-index: 99;
}
.dream-banner-title .dream-banner-pig {
  position: absolute;
  left: 50%;
  font-weight: 700;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  z-index: 9;
}
.dream-banner-title .dream-banner-pig text {
  line-height: 100rpx;
  font-size: 68rpx;
}
.dream-banner > image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}
.dream-detail {
  width: 90%;
  height: 150rpx;
  margin: 0 auto;
  position: relative;
  top: -40rpx;
  background-color: #FFFFFF;
  box-shadow: 0 0 15px #d2cfcf;
  border-radius: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.dream-detail-item {
  padding-top: 20rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  line-height: 50rpx;
  font-weight: 700;
  font-size: 32rpx;
}
.dream-detail-item text {
  font-weight: 500;
  color: #9A9A9A;
  font-size: 24rpx;
}
.dream-items {
  margin: 20rpx;
}
.dream-items-title text {
  position: relative;
  top: -10rpx;
  right: -10rpx;
}
.dream-items-title image {
  width: 50rpx;
  height: 50rpx;
}
.dream-tab {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.dream-tab-y {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.dream-tab-y .button-y {
  color: #FF525A;
}
.dream-tab-e {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
}
.dream-tab-e .button-e {
  background-color: #FF525A;
  color: #FFFFFF;
}
.dream-tab button,
.dream-tab button::after {
  border-radius: 0;
  line-height: 120rpx;
}

