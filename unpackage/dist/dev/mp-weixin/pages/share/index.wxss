page,
page,
uni-page-body {
  width: 100%;
  height: 100%;
}
.share {
  width: 100%;
  height: 100%;
  background-color: #FADC00;
}
.share-nav {
  height: 80rpx;
}
.share-box {
  width: 100%;
  height: 100%;
}
.share-box-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 40rpx;
}
.share-box-top-cat image {
  width: 180rpx;
  height: 180rpx;
}
.share-box-top-text {
  margin: 30rpx 0 0 40rpx;
  line-height: 60rpx;
  font-size: 20px;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-weight: bold;
}
.share-box-detail {
  margin: 0 auto;
  padding-top: 20rpx;
  width: 90%;
  height: 70%;
  background-color: #FFFFFF;
}
.share-box-detail-card {
  border-radius: 5px;
  margin: 20rpx auto;
  width: 80%;
  height: 30%;
  padding: 20rpx;
}
.share-box-detail-card > view {
  line-height: 68rpx;
  color: #333;
  font-size: 16px;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.share-box-detail-card > view text {
  padding-left: 20rpx;
}
.share-box-detail-msg {
  width: 90%;
  margin: 0 auto;
}
.share-box-detail-msg .text-style {
  height: 84rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  color: #666666;
  font-size: 14px;
  border: 1px solid #dddddd;
  background: #f4f4f4;
  box-sizing: border-box;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  margin: 30rpx auto;
}
.share-box-detail .verify {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
}
.share-box-detail .verify .ipt-default-current {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
}
.share-box-detail .verify .sms-cd-btn {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  height: 84rpx;
  line-height: 84rpx;
  padding: 0 24rpx;
  margin: 30rpx 10rpx;
  color: #444444;
  background: #ffe300;
  border-radius: 4px;
  text-align: center;
  font-size: 14px;
}

