page,
page,
uni-page-body {
  width: 100%;
  height: 100%;
}
.share {
  width: 100%;
  height: 100%;
}
.share-nav {
  height: 80rpx;
}
.share-box {
  width: 100%;
  height: 100%;
}
.share-box-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 40rpx;
}
.share-box-top-cat image {
  width: 180rpx;
  height: 180rpx;
}
.share-box-top-text {
  margin: 30rpx 0 0 40rpx;
  line-height: 60rpx;
  font-size: 20px;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-weight: bold;
}
.share-box-detail {
  margin: 0 auto;
  padding-top: 20rpx;
  width: 90%;
  height: 70%;
  background-color: #FFFFFF;
}
.share-box-detail-card {
  border: 1px solid #F0AD4E;
  border-radius: 5px;
  margin: 20rpx auto;
  width: 80%;
  height: 30%;
  padding: 20rpx;
}
.share-box-detail-card > view {
  border-right: 1px solid #F0AD4E;
  border-left: 1px solid #F0AD4E;
  line-height: 68rpx;
  color: #333;
  font-size: 36rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.share-box-detail-card > view text.name {
  display: inline-block;
  font-weight: bold;
  width: 250rpx;
}
.share-box-detail-card > view text {
  font-weight: 500;
  padding-left: 20rpx;
}
.share-box-detail-card:first-child {
  border-top: 1px solid #F0AD4E;
}
.share-box-detail .share-button {
  position: relative;
  top: 120%;
}

